@model Category

<form method="post" class="container">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Category</h2>
			<hr />
		</div>

		<div class="mb-3">
			<label class="form-label" asp-for="Name">Name <span class="text-danger">*</span></label>
			<input class="form-control" asp-for="Name" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>

		<div class="mb-3">
			<label class="form-label" asp-for="DisplayOrder">Display Order <span class="text-danger">*</span></label>
			<input class="form-control" asp-for="DisplayOrder" />
			<span asp-validation-for="DisplayOrder" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width: 150px">Update</button>
		<a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width: 150px">Back to List</a>
	</div>
</form>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}