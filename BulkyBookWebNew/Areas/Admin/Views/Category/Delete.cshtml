@model Category

<form method="post" class="container">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete Category</h2>
			<hr />
		</div>

		<div class="mb-3">
			<label class="form-label" asp-for="Name">Name <span class="text-danger">*</span></label>
			<input class="form-control" asp-for="Name" disabled/>
		</div>

		<div class="mb-3">
			<label class="form-label" asp-for="DisplayOrder">Display Order <span class="text-danger">*</span></label>
			<input class="form-control" asp-for="DisplayOrder" disabled />
		</div>
		<button type="submit" class="btn btn-primary" style="width: 175px">Delete</button>
		<a asp-controller="Category" asp-action="Index" class="ms-2 btn btn-secondary border border-2" style="width: 175px">Back to List</a>
	</div>
</form>