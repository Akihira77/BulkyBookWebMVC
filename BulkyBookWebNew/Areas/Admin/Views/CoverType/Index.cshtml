@model IEnumerable<CoverType>

<div class="container p-3 mb-5">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">CoverType List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="CoverType" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> &nbsp; Create CoverType</a>
		</div>
	</div>
	<br /><br />

	<table class="table table-bordered table-striped" style="width: 100%">
		<thead>
			<tr class="text-center align-middle">
				<th>
					CoverType Name
				</th>
				<th>Options</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td width="50%">
					@item.Name
					</td>
					<td width="20%">
						<div class="w-75 btn-group d-flex mx-auto" role="group">
							<a asp-controller="CoverType" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info d-flex flex-column" style="width: 50px"><i class="bi bi-pencil-square"></i> Edit</a>
							<a asp-controller="CoverType" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger d-flex flex-column" style="width: 50px"><i class="bi bi-trash-fill"></i> Delete</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>