@model Company

<form method="post" class="container mb-5">
	@*<div asp-validation-summary="All"></div>*@

	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Create Company</h2>
			<hr />
		</div>
		
		<input asp-for="Id" hidden />
		<div class="mb-3">
			<label class="form-label" asp-for="Name">Name <span class="text-danger">*</span></label>
			<input class="form-control" asp-for="Name" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label class="form-label" asp-for="PhoneNumber">Phone Number</label>
			<input class="form-control" asp-for="PhoneNumber" />
			<span asp-validation-for="PhoneNumber" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label class="form-label" asp-for="StreetAddress">Street Address</label>
			<input class="form-control" asp-for="StreetAddress" />
			<span asp-validation-for="StreetAddress" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label class="form-label" asp-for="City">City</label>
			<input class="form-control" asp-for="City" />
			<span asp-validation-for="City" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label class="form-label" asp-for="State">State</label>
			<input class="form-control" asp-for="State" />
			<span asp-validation-for="State" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label class="form-label" asp-for="PostalCode">Postal Code</label>
			<input class="form-control" asp-for="PostalCode" />
			<span asp-validation-for="PostalCode" class="text-danger"></span>
		</div>

		<button type="submit" class="btn btn-primary" style="width: 150px">Create</button>
		<a asp-controller="Company" asp-action="Index" class="btn btn-secondary" style="width: 150px">Back to List</a>
	</div>
</form>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}